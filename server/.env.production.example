# Production Environment Configuration
# Copy this to .env and update with your actual values

# Database Configuration
POSTGRES_USER=vpnuser
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_123!
POSTGRES_DB=vpndb
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration  
REDIS_HOST=redis
REDIS_PORT=6379

# VPN Server Ports
VPN_PORT_TLS=8443
VPN_PORT_WS=8444
VPN_PORT_QUIC=8445

# Security Keys (GENERATE NEW ONES!)
# Use: openssl rand -hex 16
SHARED_KEY=0123456789abcdef0123456789abcdef

# Use: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_JWT_SECRET_KEY_TO_SECURE_VALUE_32_CHARS_MIN

# Use: openssl rand -base64 32  
ENCRYPTION_KEY=CHANGE_THIS_ENCRYPTION_KEY_TO_SECURE_VALUE_32_CHARS

# TLS Certificates (use Let's Encrypt in production)
TLS_CERT_PATH=./cert.pem
TLS_KEY_PATH=./key.pem

# Application
NODE_ENV=production
LOG_LEVEL=info

# Domain (for SSL certificates)
DOMAIN=vpn.yourdomain.com

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
